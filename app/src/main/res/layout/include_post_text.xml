<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/post_title"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="My First Post" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
       
        <TextView
            android:id="@+id/text_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000000"
            android:textAlignment="viewStart"
            android:layout_marginTop="10dp"
            tools:text="3/5/2018"
            android:layout_weight="1"/>
        
        <TextView
            android:id="@+id/text_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textAlignment="viewEnd"
            android:layout_marginRight="5dp"
            tools:text="00:00"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/person_1_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            tools:textSize="20sp"
            tools:text="Person1"
            android:textAlignment="viewStart"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/contact_1_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:textSize="20sp"
            tools:text="1111"
            android:layout_marginTop="5dp"
            android:textAlignment="viewEnd"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/person_2_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAlignment="viewStart"
            tools:textSize="20sp"
            tools:text="Person2"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/contact_2_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:textSize="20sp"
            tools:text="2222"
            android:layout_marginTop="5dp"
            android:textAlignment="viewEnd"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/person_3_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            tools:textSize="20sp"
            tools:text="Person3"
            android:textAlignment="viewStart"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/contact_3_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:textSize="20sp"
            tools:text="3333"
            android:layout_marginTop="5dp"
            android:textAlignment="viewEnd"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/person_4_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textAlignment="viewStart"
            tools:textSize="20sp"
            tools:text="Person4"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/contact_4_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:textSize="20sp"
            tools:text="4444"
            android:layout_marginTop="5dp"
            android:textAlignment="viewEnd"
            android:layout_weight="2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/person_5_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            tools:textSize="20sp"
            tools:text="Person5"
            android:textAlignment="viewStart"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/contact_5_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:textSize="20sp"
            tools:text="5555"
            android:layout_marginTop="5dp"
            android:textAlignment="viewEnd"
            android:layout_weight="2"/>
    </LinearLayout>
</LinearLayout>
