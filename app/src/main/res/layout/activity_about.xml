<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AppInfo">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="50dp">

    <TextView
        android:id="@+id/our_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Info"
        android:textSize="35sp"
        android:textColor="@color/black"
        android:paddingLeft="10dp"/>

    <View
        android:id="@+id/separator_app_info"
        android:layout_marginLeft="10dp"
        android:layout_width="132dp"
        android:layout_height="2dp"
        android:backgroundTint="@color/black"
        android:background="@color/black"
        android:layout_below="@+id/our_app"/>

    <TextView
        android:id="@+id/app_info_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="15dp"
        android:paddingBottom="20dp"
        android:text="@string/app_info_body_content"
        android:textColor="@color/greyish"
        android:layout_below="@+id/separator_app_info"
        android:textSize="22sp" />


    <TextView
        android:id="@+id/contributors_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:text="Contributor(s)"
        android:paddingTop="10dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/app_info_body"/>

    <View
        android:id="@+id/separator_contributiors"
        android:layout_width="80dp"
        android:layout_centerInParent="true"
        android:layout_height="1dp"
        android:paddingTop="5dp"
        android:background="@color/greyish"
        android:backgroundTint="@color/greyish"
        android:layout_below="@+id/contributors_head"/>


    <TextView
        android:id="@+id/first_contributor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="@string/about_rajeev"
        android:layout_below="@+id/contributors_head" />


    <TextView

        android:id="@+id/email_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_contributor"
        android:text="rajeev29five@gmail.com"
        android:autoLink="email"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"/>

    </RelativeLayout>
</ScrollView>